<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C4C4C"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/configuracion"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notis"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/soundCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sonido"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="@string/nombre"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="@string/contraseÃ±a"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/birthDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/fecha"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/datepickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selecciona"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/selectedDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/reminderTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora de recordatorio"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:textColor="@color/white"

            android:id="@+id/timepickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar hora"
            android:layout_marginBottom="16dp" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/selectedTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/languageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idioma"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:textColor="@color/white"

            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/volumeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volumen"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:textColor="@color/white"

            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/colorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:textColor="@color/white"

            android:id="@+id/colorPickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar color"
            android:layout_marginBottom="16dp" />

        <TextView
            android:textColor="@color/white"

            android:id="@+id/selectedColorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />

        <Button
            android:textColor="@color/white"

            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
